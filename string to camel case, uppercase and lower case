def camelcase(a):

    inp = a.split(" ")
    camel = []
    for letter in inp:
        final_words = letter[0].upper() + letter[1:]
        camel.append(final_words)
    output = " ".join(camel)
    return output


def upper(a):
    a = a.upper()
    return a


def lower(a):
    a = a.lower()
    return a


def main():
    x = input("Enter a string \n").lower()
    print(camelcase(x))
    print(upper(x))
    print(lower(x))


main()
