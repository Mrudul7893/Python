def prime(a):
    if a < 2:
        print("2 is the smallest prime number.")
    i = 2
    while i < a//2+1:
        y = a % i
        if y == 0:
            print(a, "is not a prime number ")
        else:
            print(a, "is a prime number ")


def main():
    try:
        x = int(input("enter a number:"))
        prime(x)

    except ValueError:
        print("Enter a valid integer")


main()

