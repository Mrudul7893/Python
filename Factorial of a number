def main():
    try:
        n = int(input("Enter any integer\n"))
        print("the factorial is", factorial(n))

    except ValueError:
        print("Invalid Input: Enter an integer")


def factorial(a):
    if a > 0:
        fact = 1
        for a in range(1, a + 1):
            fact = fact * a
        return fact
    elif a == 0:
        print("1")
    else:
        print("please enter a positive number")
        exit()


main()
