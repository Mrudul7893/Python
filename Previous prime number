def prevprime(n):

    if n <= 2:
        print("2 is the smallest prime number")
        exit()

    else:
        while True:
            n -= 1
            for i in range(2,n):
                if n % i == 0:
                    break

            else:
                print(n)
                break

def main():
    try:
        x = int(input("enter a number:"))
        prevprime(x)


    except ValueError:
        print("Invalid input: Enter an integer")


main()


